{% extends "layout.njk" %}
{% block content %}
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <h2 class="title is-5">
                    Policy Management
                </h2>
                <div class="columns is-vcentered is-multiline">
                    <div class="column is-four-fifths">
                    </div>
                    <div class="column is-one-fifth">
                        <a class="button is-link is-pulled-right" href="/policy{{ '?username=' + username if username }}">Create new Policy</a>
                    </div>
                    <div class="column is-full">
                        <table class="table is-striped is-narrow is-fullwidth">
                            <thead>
                            <tr>
                                <th><abbr title="Number">No.</abbr></th>
                                <th>Active</th>
                                <th>Username</th>
                                <th><abbr title="Preferred Blockchains">BC</abbr></th>
                                <th><abbr title="Blockchain Type">Type</abbr></th>
                                <th><abbr title="Max. Cost Threshold">Cost</abbr></th>
                                <th><abbr title="Interval For Cost Threshold">Interv.</abbr></th>
                                <th><abbr title="Cost Threshold Currency">Currency</abbr></th>
                                <th><abbr title="Transactions Per Second">TPS</abbr></th>
                                <th><abbr title="Block Time">Time</abbr></th>
                                <th><abbr title="Block Size">Size</abbr></th>
                                <th><abbr title="Data Size">D. Size</abbr></th>
                                <th><abbr title="Touring Complete">Compl.</abbr></th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for policy in policies %}
                                <tr>
                                    <th>{{ loop.index }}</th>
                                    <td>
                                        {% if policy.isActive %}
                                            <span class="tag is-success">
                                                Active
                                            </span>
                                        {% else %}
                                            <span class="tag is-danger">
                                                Inactive
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>{{ policy.username }}</td>
                                    <td>{{ policy.preferredBC }}</td>
                                    <td>{{ policy.bcType }}</td>
                                    <td>{{ policy.cost }}</td>
                                    <td>{{ policy.interval }}</td>
                                    <td>{{ policy.currency }}</td>
                                    <td>{{ policy.bcTps }}</td>
                                    <td>{{ policy.bcBlockTime }}</td>
                                    <td>{{ policy.bcBlockSize }}</td>
                                    <td>{{ policy.bcDataSize }}</td>
                                    <td>{{ policy.bcSmartContract }}</td>
                                    <td>
                                        <a class="button is-link" href="/policy?id={{ policy._id }}">Edit Policy</a>
                                    </td>
                                    <td>
                                        <button class="button is-danger delete-button"
                                                id="delete-policy-{{ policy._id }}" value="{{ policy._id }}">Delete
                                            Policy
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>noData</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>

    <script src="../js/policy-list.js"></script>
{% endblock %}