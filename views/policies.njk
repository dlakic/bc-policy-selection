{% macro getTime(time1, time2) %}
    {% if time1 == time2 %}
        24h
    {% else %}
        {{ time1 }} - {{ time2 }}
    {% endif %}
{% endmacro %}

{% macro getIcon(boolean) %}
    {% if boolean %}
        <span class="icon has-text-success">
            <i class="fas fa-lg fa-check-circle"></i>
        </span>
    {% else %}
        <span class="icon has-text-danger">
            <i class="fas fa-lg fa-times-circle"></i>
        </span>
    {% endif %}
{% endmacro %}

{% macro getTag(variable, style) %}
    {% if variable != '' %}
        <span class="tag {{ style }}">
            {{ variable }}
        </span>
    {% else %}
        {{ variable }}
    {% endif %}
{% endmacro %}

{% macro getTagInterval(interval) %}
    {% if interval == "daily" %}
        {% set style = "is-primary" %}
    {% elif interval == "weekly" %}
        {% set style = "is-warning" %}
    {% elif interval == "monthly" %}
        {% set style = "is-black" %}
    {% elif interval == "yearly" %}
        {% set style = "is-light" %}
    {% else %}
        {% set style = "is-info" %}
    {% endif %}
    {{ getTag(interval, style) }}
{% endmacro %}

{% macro getTagPolicyStatus(status) %}
    {% if status %}
        {{ getTag("Active", "is-success is-rounded") }}
    {% else %}
        {{ getTag("Inactive", "is-danger is-rounded") }}
    {% endif %}
{% endmacro %}

{% macro getTagBcType(bcType) %}
    {% if bcType == 'public' %}
        <span class="tag is-neutral">
            <i class="fas fa-lg fa-lock-open inline-icon"></i>
            {{ bcType }}
        </span>
        {% elif bcType == 'private' %}
        <span class="tag is-neutral">
            <i class="fas fa-lg fa-lock inline-icon"></i>
            {{ bcType }}
        </span>
        {% elif bcType == 'indifferent' %}
        <span class="tag is-neutral">
            {{ bcType }}
        </span>
    {% else %}
        {{ bcType }}
    {% endif %}
{% endmacro %}

{% macro getTagCostProfile(costProfile) %}
    {% if costProfile == 'performance' %}
        <span class="tag is-neutral">
            <i class="fas fa-lg fa-tachometer-alt inline-icon"></i>
            {{ costProfile }}
        </span>
    {% else %}
        <span class="tag is-neutral">
            <i class="fas fa-lg fa-euro-sign inline-icon"></i>
            {{ costProfile }}
        </span>
    {% endif %}
{% endmacro %}

{% extends "layout.njk" %}
{% block content %}
    <section class="hero">
        <div class="hero-body">
            <div class="container">
                <div class="policy-management columns is-vcentered is-multiline">
                    <div class="column is-full">
                        <h2 class="title is-4">
                            Policy Management
                        </h2>
                    </div>
                    <div id="error" class="notification is-danger">
                    </div>
                    <div class="column is-four-fifths">
                    </div>
                    <div class="column is-one-fifth">
                        <a class="button is-link is-pulled-right"
                           href="/policy{{ '?username=' + username if username }}">Create new Policy</a>
                    </div>
                    <div class="column is-full">
                        <table class="table is-striped is-narrow is-fullwidth">
                            <thead>
                            <tr>
                                <th><abbr title="Number">No.</abbr></th>
                                <th>Active</th>
                                <th>Username</th>
                                <th><abbr title="Preferred Blockchains">BC</abbr></th>
                                <th><abbr title="Blockchain Type">Type</abbr></th>
                                <th><abbr title="Max. Cost Threshold">Cost</abbr></th>
                                <th><abbr title="Interval For Cost Threshold">Interv.</abbr></th>
                                <th><abbr title="Cost Threshold Currency">Currency</abbr></th>
                                <th><abbr title="Transactions Per Second">TPS</abbr></th>
                                <th><abbr title="Block Time">Time</abbr></th>
                                <th><abbr title="Transaction Size">Bytes</abbr></th>
                                <th><abbr title="Turing Complete">Compl.</abbr></th>
                                <th><abbr title="Allow Split Transactions">Split</abbr></th>
                                <th><abbr title="Cost Profile">Profile</abbr></th>
                                <th><abbr title="Time Frame">Time</abbr></th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for policy in policies %}
                                <tr class="policy-info">
                                    <th>{{ loop.index }}</th>
                                    <td class="policy-active">{{ getTagPolicyStatus(policy.isActive) }}</td>
                                    <td class="policy-username">{{ policy.username }}</td>
                                    <td class="policy-preferred-bc">{{ policy.preferredBC }}</td>
                                    <td class="policy-bc-type">{{ getTagBcType(policy.bcType) }}</td>
                                    <td class="policy-cost">{{ policy.cost }}</td>
                                    <td class="policy-interval">{{ getTagInterval(policy.interval) }}</td>
                                    <td class="policy-currency">{{ policy.currency }}</td>
                                    <td class="policy-bc-tps">{{ policy.bcTps }}</td>
                                    <td class="policy-block-time">{{ policy.bcBlockTime }}</td>
                                    <td class="policy-bc-data-size">{{ policy.bcDataSize }}</td>
                                    <td class="policy-bc-touring-complete">{{ getIcon(policy.bcTuringComplete) }}</td>
                                    <td class="policy-split">{{ getIcon(policy.split) }}</td>
                                    <td class="policy-cost-profile">{{ getTagCostProfile(policy.costProfile) }}
                                    </td>
                                    <td class="policy-time-frame">{{ getTime(policy.timeFrameStart, policy.timeFrameEnd) }}</td>
                                    <td class="policy-edit">
                                        <a class="button is-link table-button" href="/policy?id={{ policy._id }}">Edit
                                            Policy</a>
                                    </td>
                                    <td class="policy-delete">
                                        <button class="button is-danger delete-button table-button"
                                                id="delete-policy-{{ policy._id }}" value="{{ policy._id }}">Delete
                                            Policy
                                        </button>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>noData</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="user-stats columns is-vcentered is-multiline">
                    <div class="column is-full">
                        <h2 class="title is-4">
                            Stats for user <span id="username-stats">{{ username }}</span>
                        </h2>
                    </div>
                    <div class="column is-one-third">
                        <h2 class="title is-5">
                            Costs:
                        </h2>
                        <canvas id="costsPerIntervalChart"></canvas>
                    </div>
                    <div class="column is-one-third">
                        <h2 class="title is-5">
                            Policy Costs:
                        </h2>
                        <canvas id="costsPerPolicyChart"></canvas>
                    </div>
                    <div class="column is-one-third">
                        <h2 class="title is-5">
                            Policy Transactions:
                        </h2>
                        <canvas id="transactionsPerPolicyChart"></canvas>
                    </div>
                    <div class="column is-one-third">
                        <h2 class="title is-5">
                            Blockchain Transactions:
                        </h2>
                        <canvas id="transactionsPerBlockchainChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block additionalJS %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
    <script src="../js/policy-list.js"></script>
    <script src="../js/charts.js"></script>
{% endblock %}